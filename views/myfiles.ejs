<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title><%=title%></title>
	</head>
	<body>
		<h1>My Files</h1>
		<%-include("./partials/create",{folder:null}) %>
		<%-include("./partials/fileupload",{folder:null}) %> <%if(folders.length > 0
		|| files.length>0 ) {%> <% folders.forEach((f) => { %> <% if(!f.parentId) {%>
		<h2><a href="/myfiles/<%=f.id%>"><%=f.name%></a></h2>
		<form action="/myfiles/delete/<%=f.id%>" method="POST">
			<button
				onclick="return confirm(`Are you sure you wish to delete this folder?`)"
			>
				Delete
			</button>
		</form>
		<a href="/myfiles/update/<%=f.id%>">Edit</a>
		<%}%> <% }); %> <% files.forEach((f) => { %> <%if(!f.folderId) {%>
		<p><%=f.name%></p>
		<p></p>
		<p>Folder ID: <%=f.folderId%></p>
		<a href="/myfiles/download/1/<%=f.name%>">Download</a>
		<%}%> <% }); %> <%} else {%>
		<p>Nothing here</p>
		<%}%>
	</body>
</html>
